<Window x:Class="WpfUserControlExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:WpfUserControlExample"
        mc:Ignorable="d"
        Title="User Control v1.0" Height="500" Width="600">
    <Canvas>
        <uc:LimitedInputUserControl title="Enter name:" MaxLength="30" Height="50" 
                                    VerticalAlignment="Top" Width="200" 
                                    Canvas.Top="20" Canvas.Left="30"/>
        <uc:LimitedInputUserControl title="Enter description:" MaxLength="150" Height="50" 
                                    VerticalAlignment="Top" Width="400" 
                                    Canvas.Top="80" Canvas.Left="30"/>

    </Canvas>
</Window>
